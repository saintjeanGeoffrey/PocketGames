<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".fragments.addGameToCollection.AddByScanFragment"
                android:orientation="vertical"
                android:background="@color/white">

    <RelativeLayout
            android:id="@+id/rl_addByScan_scanSurface_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <SurfaceView
                android:id="@+id/sv_addByScan_surfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
        <TextView
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:background="#FF9800"
                android:layout_centerInParent="true"
        />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_addByScan_scanSurface_container"
            android:padding="15dp"
            android:background="@color/white"
    >
        <TextView
                android:id="@+id/tv_addByScan_resultTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Results :"
                android:textSize="25sp"
                android:layout_marginBottom="15dp"
        />
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_addByScan_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_below="@id/tv_addByScan_resultTitle"
        >
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</RelativeLayout>