<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="5dp"
>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="#F3F1F1"
        >

            <ImageView
                    android:id="@+id/iv_layoutCollectionItem_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="center"
            />

            <ImageView
                    android:id="@+id/iv_collection_delete_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete"
                    android:layout_alignRight="@id/iv_layoutCollectionItem_image"
                    android:layout_alignTop="@id/iv_layoutCollectionItem_image"
                    android:visibility="gone"
            />

            <TextView
                    android:id="@+id/tv_layoutCollectionItem_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:layout_below="@id/iv_layoutCollectionItem_image"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="#000"
            />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>